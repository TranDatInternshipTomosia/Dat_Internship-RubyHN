<% provide(:title, @user.name) %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <h1>
          <%= gravatar_for @user %>
          <%= @user.name %>
        </h1>
      </section>
      <section class="note_form">
        <%= render 'shared/note_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <% if @user.notes.any? %>
        <h3>Notes</h3>
        <ol class="microposts">
          <%= render 'shared/titles' %>
        </ol>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <h1>
          <%= gravatar_for @user %>
          <%= @user.name %>
        </h1>
      </aside>
      <div class="col-md-8">
        <% if @user.notes.any? %>
          <h3>Notes</h3>
          <ol class="microposts">
            <%= render @notes %>
          </ol>
          <%= will_paginate @notes %>
        <% end %>
      </div>
    </div>
  <% end %>
